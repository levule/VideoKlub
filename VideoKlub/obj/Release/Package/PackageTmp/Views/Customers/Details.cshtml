@model VideoKlub.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Name</h2>
<ul>
    <li>Clanarina: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Rodjendan: @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>