@model VideoKlub.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Zanr: @Model.Genre.Name</li>
    <li>Datum objavljivanja: @Model.ReleaseDate</li>
    <li>Datum dodavanja: @Model.DateAdded</li>
    <li>Na stanju: @Model.NumberInStock</li>
</ul>